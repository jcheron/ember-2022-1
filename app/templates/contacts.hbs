{{page-title "Contacts"}}
<table class="table">
  <tbody>
  {{#each @model.contacts as |contact|}}
    <tr>
      <td>{{contact.nom}}</td>
      <td>
        <LinkTo class="btn btn-primary btn-sm" @route="contacts.update" @model={{contact}}>
          <i class="bi bi-x"></i>
        </LinkTo>
        <button class="btn btn-danger btn-sm" type="button" {{action "delete" contact}}>
          <i class="bi bi-x"></i>
        </button>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
<LinkTo class="btn btn-primary" @route="contacts.add">Ajouter un contact</LinkTo>

{{#if @model.deletedsCount}}
  <button class="btn btn-danger" type="button" {{action "confirmDeletion" @model.deleteds}}>
    Supprimer d√©finitivement ({{@model.deletedsCount}})
  </button>
  <button class="btn btn-secondary" type="button" {{action "cancelDeletion" @model.deleteds}}>
    Annuler la suppression ({{@model.deletedsCount}})
  </button>
{{/if}}
{{outlet}}